{
    "compilerOptions": {
      "target": "ES2022",                 
      "module": "NodeNext",                
      "moduleResolution": "NodeNext",      
      "esModuleInterop": true,             
      "forceConsistentCasingInFileNames": true,  
      "skipLibCheck": true,                
      "strict": true,                      
      "rootDir": "src",                    
      "outDir": "dist",                    
      "types": ["node"],                   
      "allowJs": false,                    
      "resolveJsonModule": true            
    },
    "include": ["src"],                    
    "exclude": ["node_modules", "dist"]    
  }
  